<odoo>
    <template id="report_task_subcontractor_details">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <style>
                              .header-row {
                                  background-color: #f2f2f2;
                                  font-weight: bold;
                              }
                              .dark-background {
                                  background-color: #a0a0a0; /* Example dark background color */
                                  color: white; /* White text color for better contrast */
                              }
                              .light-background {
                                  background-color: #DCDCDC; /* Example dark background color */
                                  color: black; /* Black text color for better contrast */
                              }
                              .merged-row {
                                  vertical-align: middle;
                                  text-align: center;
                              }
                              table {
                                  width: 100%;
                                  border-collapse: collapse;
                                  table-layout: fixed;
                                  margin-bottom: 10px;
                              }
                              tr {
                                  line-height: 10px;
                              }
                              td, th {
                                  border: 1px solid black;
                                  padding: 8px;
                                  text-align: left;
                                  vertical-align: top;
                              }
                              .text-center {
                                  text-align: center;
                              }
                              .text-right {
                                  text-align: center;
                              }
                              .right-border {
                                  border-right: 1px solid black;
                              }
                              .bottom-border {
                                  border-bottom: 1px solid black;
                              }
                              .no-border {
                                  border: none;
                              }
                              .full-width {
                                  width: 100%;
                              }
                              .half-width {
                                  width: 50%;
                              }
                              .indent {
                                  padding-left: 15px;
                              }
                              .section-header {
                                  font-weight: bold;
                                  background-color: #e6e6e6;
                                  text-align: center;
                              }
                              .checklist {
                                  list-style-type: none;
                                  padding: 0;
                                  margin: 0;
                              }
                              .checklist li {
                                  margin-bottom: 5px;
                              }
                              .checklist-box {
                                  display: inline-block;
                                  width: 15px;
                                  height: 15px;
                                  border: 1px solid #000;
                                  margin-right: 5px;
                              }
                              .box {
                                  padding: 5px 10px;
                                  width: 10px;
                                  border: 1px solid #000;
                                  margin-right: 5px;
                              }
                              /* Hide the default checkbox */
                                input[type="checkbox"] {
                                    display: none;
                                }

                                /* Style the custom checkbox */
                                .custom-checkbox {
                                    display: inline-block;
                                    width: 20px;
                                    height: 20px;
                                    background-color: #8A8888;
                                    border-radius: 4px;
                                    margin-right: 10px;
                                    cursor: pointer;
                                }                                
                          </style>
                          <h2 class="text-right">Bautagesbericht</h2>
                          <table style="width:100%;">
                              <tr>
                                  <td>Team :</td>
                                  <td></td>
                              </tr>
                              <tr>
                                  <td>Datum :</td>
                                  <td><span t-esc="doc.date"/></td>
                              </tr>
                              <tr>
                                  <td>Project Nr :</td>
                                  <td><span t-esc="doc.project_id.alternative_project_number"/></td>
                              </tr>
                              <tr>
                                  <td>Bautelle :</td>
                                  <td><span t-esc="doc.project_id.project_name"/></td>
                              </tr>
                              <tr>
                                  <td>Arbeiter :</td>
                                  <td></td>
                              </tr>
                              <tr>
                                  <td><p> </p></td>
                                  <td><p> </p></td>
                              </tr>
                              <tr>
                                  <td><p> </p></td>
                                  <td><p> </p></td>
                              </tr>
                              <tr>
                                  <td>Aufgabe :</td>
                                  <td><span t-esc="doc.work_description"/></td>
                              </tr>                                                  
                          </table> 
                          <h4 class="text-left">Sonstiges</h4>   
                          <table>
                              <tr>
                                  <td><p> </p></td>
                              </tr>
                              <tr>
                                  <td><p> </p></td>
                              </tr>
                              <tr>
                                  <td><p> </p></td>
                              </tr>
                              <tr>
                                  <td><p> </p></td>
                              </tr>
                              <tr>
                                  <td><p> </p></td>
                              </tr>
                          </table>  
                          <table>
                              <tr colspan="2">
                                  <td><input type="checkbox" class="checkbox" />
                                    <span class="custom-checkbox"></span> 
                                    Fregabeschild montiert
                                </td>
                              </tr>
                              <tr>
                                <td><input type="checkbox" class="checkbox" />
                                        <span class="custom-checkbox"></span> Gerüst freigegeben
                                </td>
                                <td><input type="checkbox" class="checkbox" />
                                    <span class="custom-checkbox"></span> 
                                    Gerüst gespertt
                                </td>
                              </tr>
                          </table>                                             
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
