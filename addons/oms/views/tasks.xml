<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="oms.tasks_list">
      <field name="name">_('Task Management')</field>
      <field name="model">task</field>
      <field name="arch" type="xml">
        <tree default_group_by="date:day">
          <field name="date"/>
          <field name="type"/>
          <field name="project_id"/>

          <field name="work_description"/>
          <field name="work_category"/>
          <field name="client_id"/>   

          <field name="manager_id" />
          <field name="employee_ids" />
          <field name="vehicle_ids" widget="many2many_tags" />
          <field name="bericht" />
          <button name="%(oms.action_report_task_details)d" type="action" class="oe_highlight" icon="fa-print"/>
          <button name="%(oms.action_report_task_subcontractor_details)d" type="action" class="oe_highlight" icon="fa-file"/>
          <field name="write_uid"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="oms.tasks_form">
      <field name="name">Task</field>
      <field name="model">task</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <!-- Client/Auftraggeber -->
            <group name="client_id">
              <field name="client_id"/>
            </group>
            <!-- Project/Bauvorhaben/Objectbezeichnung -->
            <group name="project_id">
              <field name="project_id" />
            </group>
            <!-- Date and Time -->
            <group name="date">
              <field name="date" string="Datum"/>
            </group>            
            <!-- Type -->
            <group name="type">
              <field name="type" string="Type"/>
            </group>
            <!-- Arbeiten -->
            <group name="work_category">
              <field name="work_category"/>
            </group>
            <!-- Arbeitsauftrag -->
            <group name="work_description">
              <field name="work_description"/>
            </group>
            <!-- KolonnefÃ¼hrer/manager -->
            <group name="manager_id">
              <field name="manager_id">
                <tree editable="bottom">
                    <field name="employee_id"/>
                </tree>
              </field>
            </group>
            <notebook>
              <page string="Employee management">
                <field name="employee_ids">
                  <tree editable="bottom">
                      <field name="employee_id"/>
                      <!-- Other fields for product.variant -->
                  </tree>
                </field>
              </page>
            </notebook>
            
            <notebook>
              <page string="Vehicle management">
                  <field name="vehicle_ids">
                      <tree editable="bottom">
                          <field name="license_plate_no_id"/>
                          <field name="driver_name"/>
                          <!-- Other fields for product.variant -->
                      </tree>
                  </field>
              </page>
            </notebook>
            <!-- Reported -->
            <group name="bericht">
              <field name="bericht" string="Report Submitted"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_task_vehicle_rel_tree" model="ir.ui.view">
      <field name="name">vehicle</field>
      <field name="model">vehicle</field>
      <field name="arch" type="xml">
          <tree>
              <field name="license_plate_no_id"/>
              <field name="driver_name"/>
          </tree>
      </field>
  </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="oms.tasks_action_window">
      <field name="name">Task management</field>
      <field name="res_model">task</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>
