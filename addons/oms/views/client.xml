<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="oms.clients_list">
      <field name="name">Client management</field>
      <field name="model">client</field>
      <field name="arch" type="xml">
        <tree>
          <field name="client_index"/>
          <field name="name"/>
          <field name="client_office"/>
          <field name="street_and_number"/>
          <field name="zip_and_city"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="oms.clients_action_window">
      <field name="name">Client management</field>
      <field name="res_model">client</field>
      <field name="view_mode">tree,form</field>
    </record>
  </data>
</odoo>
