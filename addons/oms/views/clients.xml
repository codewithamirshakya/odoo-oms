          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="Client managment" id="oms.menu_root"/>

    <!-- menu categories -->

    <menuitem name="List" id="oms_clients_list" parent="oms.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="oms_clients_action_window" parent="oms_clients_list" action="oms.clients_action_window"/>
