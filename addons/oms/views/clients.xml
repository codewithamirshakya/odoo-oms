<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="oms.clients_list">
      <field name="name">Client Management</field>
      <field name="model">client</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="status"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="oms.clients_action_window">
      <field name="name">client</field>
      <field name="res_model">client</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
